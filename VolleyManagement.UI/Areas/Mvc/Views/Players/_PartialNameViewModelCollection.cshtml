@model IEnumerable<VolleyManagement.UI.Areas.Mvc.ViewModels.Players.PlayerNameViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="player_@item.Id">
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td class="hidden">
            @item.Id
        </td>
        <td>
            <input type="button"
                   name="choosePlayerButton"
                   value="@Resources.UI.PlayerViews.AddPlayerToTeam"
                   onclick="VM.team.handlers.addPlayerToTeam('@item.FullName', @item.Id)" />
        </td>  
    </tr>
}
</table>
