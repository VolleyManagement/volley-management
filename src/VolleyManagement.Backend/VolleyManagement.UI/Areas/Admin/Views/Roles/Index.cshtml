@model IList<VolleyManagement.UI.Areas.Admin.Models.RoleViewModel>

@{
    ViewBag.Title = "Roles";
}

<div class="panel panel-primary">
    <div class="panel-heading">Roles</div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
        @if (Model.Count == 0)
        {
        <tr>
            <td colspan="3" class="text-center">No Roles</td>
        </tr>
        }
        else
        {
            foreach (var role in Model)
            {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { @class = "btn btn-danger btn-xs" })
                @Html.ActionLink("Members", "Details", new { id = role.Id }, new { @class = "btn btn-primary btn-xs" })
            </td>
        </tr>
            }
        }
    </table>
</div>

