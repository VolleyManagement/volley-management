@model VolleyManagement.UI.Areas.Mvc.ViewModels.GameResults.GameResultViewModel

@{
    ViewBag.Title = Resources.UI.GameResultViews.EditTitle;
}

<h2>@Resources.UI.GameResultViews.EditTitle</h2>

@using (Html.BeginForm("Edit", "GameResults", FormMethod.Post, new { id = "createForm", name = "createForm" }))
{
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Partial("_CreateOrEdit", Model)

    @Html.HiddenFor(model => model.GameNumber);
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Resources.UI.GameResultViews.Save" class="btn btn-default" />
            @Html.ActionLink(@Resources.UI.GameResultViews.Back, 
                "ShowSchedule",
                "Tournaments",
                new { tournamentId = Model.TournamentId }, 
                new { @class = "btn btn-default", @id = "backToSchedule" })
        </div>
    </div>

}

<script src="~/Scripts/GameResults/ResultsValidate.js" type="text/javascript"></script>


