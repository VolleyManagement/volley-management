@model VolleyManagement.UI.Areas.Mvc.ViewModels.Players.PlayerViewModel

@{
    ViewBag.Title = Resources.UI.PlayerViews.EditPlayerTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Resources.UI.PlayerViews.PlayerLegend</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateOrEdit", Model)

        <p>
            <input type="submit" value="@Resources.UI.PlayerViews.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.UI.PlayerViews.BackToList, "Index")
</div>
