@model IEnumerable<VolleyManagement.UI.Areas.Mvc.ViewModels.Players.PlayerNameViewModel>

<table class="table">
    <tr>
        <th>
            <label>Full name</label>
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr id="player_@item.Id">
        <td>
            <label>Full name</label>
        </td>
        <td class="hidden">
            @item.Id
        </td>
        <td>
            <input type="button"
                   name="choosePlayerButton"
                   value="@Resources.UI.PlayerViews.AddPlayerToTeam"
                   onclick="VM.team.handlers.addPlayerToTeam('@item.FirstName'+ ' ' +'@item.LastName', @item.Id)" />
        </td>
    </tr>
}
</table>
